
<tr class="listing" id="listing-<%= @listing.id%>">
  <%# <td> <%= listing.id%>
  <td class="location">
    <%= @listing %>
  </td>
  <td class="price">
    $<%= number_with_precision(@listing.price, precision: 2)%>
  </td>
  <td class="amount">
    <%= @listing.amount%>
  </td>

  <td class="start_time">
    <%= @listing.start_time%>
  </td>

  <td class="end_time">
    <%= @listing.end_time%>
  </td>

  <td class="description">
    <%= @listing.description%>
  </td>
</tr>

<div>
    <ul class="listing-actions">
        <li><%= link_to "Edit", edit_listing_path(@listing) %></li>
        <li><%= link_to "Delete", listing_path(@listing), data: {
            confirm: "Are you sure you want to delete this listing?",
        }, method: :delete %></li>
    </ul>

    <% if current_user.id == @listing.buyer %>
      <button class="button is-success" disabled>Reserved</button>
    <% elsif current_user.id != @listing.user_id %>
      <%= button_to "Reserve", reserve_listing_path(@listing), data: {
        confirm: "Are you sure you want to reserve this listing?",}, class: "button" %>
    <% else %>
    <% end %>
</div>